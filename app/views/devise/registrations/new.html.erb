<div class="form-wrapper">
  <div class="form-login col-md-4 col-md-offset-4">
    <h2>Registrace do systému</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
      
        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} znaků je minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Registrovat se" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>
      